@model IEnumerable<Vehicle>
@{
    ViewData["Title"] = "Tüm Araçlarımız";
}

<h1>Tüm Araçlarımız</h1>


<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col mb-5">
            <div class="card h-100">
                <img class="card-img-top" src="/Img/Cars/@item.Image" alt="...">
                <div class="card-body p-4">
                    <div class="text-center">
                        <h5 class="fw-bolder">@item.Brand.Name @item.Model @item.CaseType</h5>

                        @item.Price ₺
                    </div>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Arac/Index/@item.Id">İncele</a></div>
                </div>
            </div>
        </div>
    }
</div>
